#
# this is the ziti-controller.service bootstrapping inputs file where answers are recorded for generating a
# configuration
#

# the controller's DNS name (default: localhost)
ZITI_CTRL_ADVERTISED_ADDRESS=''

# the controller's port (default: 1280)
ZITI_CTRL_ADVERTISED_PORT=''

# this router's DNS name (default: localhost)
ZITI_ROUTER_ADVERTISED_ADDRESS=''

# this router's port (default: 3022), if <= 1024, then grant the NET_BIND_SERVICE ambient capability in
# /etc/systemd/system/ziti-router.service.d/override.conf
ZITI_ROUTER_PORT=''

# the tunnel mode of the router (default: none [host, tproxy, proxy]); 
# the router must be administratively created with the --tunneler-enabled flag; if "tproxy" mode then grant ambient
# capbility NET_ADMIN in /lib/systemd/system/ziti-router.service and set the host's DNS resolvers to have this router's
# nameserver as the primary in additional to a secondary, recursive resolver
ZITI_ROUTER_MODE=''

# where to listen for DNS requests in tproxy mode (default: udp://127.0.0.1:53)
ZITI_ROUTER_TPROXY_RESOLVER=''

# CIDR range of IP addresses to assign to DNS clients in tproxy mode (default: 100.64.0.1/10)
ZITI_ROUTER_DNS_IP_RANGE=''

# the interface address on which to listen (default: 0.0.0.0)
ZITI_ROUTER_BIND_ADDRESS=''

# token will be scrubbed from this file after enrollment
ZITI_ENROLL_TOKEN=''

# type of router (default: edge, else fabric)
ZITI_ROUTER_TYPE=''

