{
  "$id": "http://ziti-edge.netfoundry.io/schemas/identities.post.json",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "name",
    "type",
    "permissions",
    "isAdmin"
  ],
  "properties": {
    "name": {
      "$ref": "definitions.all.json#/definitions/name"
    },
    "type": {
      "type": "string",
      "enum": [
        "User",
        "Device",
        "Service"
      ]
    },
    "enrollment": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "ott": {
          "type": "boolean"
        },
        "ottca": {
          "$ref": "definitions.all.json#/definitions/id"
        },
        "updb": {
          "$ref": "definitions.all.json#/definitions/username"
        }
      }
    },
    "isAdmin": {
      "type": "boolean",
      "default": false
    },
    "permissions": {
      "type": "array",
      "items": {
        "$ref": "definitions.all.json#/definitions/name"
      },
      "default": []
    },
    "tags": {
      "default": {},
      "$ref": "definitions.all.json#/definitions/tags-null"
    }
  }
}

